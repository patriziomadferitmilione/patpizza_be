const mongoose = require("mongoose");

const dataSchema = new mongoose.Schema({
  nome: {
    required: true,
    type: String,
    trim: true,
  },
  aggiunte: {
    required: true,
    type: Array,
    trim: true,
  },
  rimozioni: {
    required: true,
    type: Array,
    trim: true,
  },
  ordine_id: {
    required: true,
    type: String,
    trim: true,
  },
  note: {
    type: String,
    trim: true,
  },
  createdAt: {
    type: Date,
    default: Date.now,
    trim: true,
  }
});

module.exports = mongoose.model("Pizza", dataSchema);